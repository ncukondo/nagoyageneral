@require "../_variables"; // 共通設定を読み込み
@require "../mixins/_utils"; // ユーティリティモジュール

.globalNavi{
  background-color: $colorMenuBackTrans;

  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;

  position: fixed;
  top:0;
  width: 100%;
  z-index: 10;
  transition-duration: .3s;
  box-shadow: 0 3px 15px rgba(0,0,0,0.4);

  // ロゴ部分のスタイル
  .globalLogo{
    text-shadow: 0px 0px 1px $colorMenuText1;
    color: $colorMenuText1;
    font-weight: 500;
    font-size: 2rem;
    padding: 0.5rem 2rem 0.5rem 1rem;
    transition-duration: .2s;
    &:hover{
      text-shadow: 0px 0px 15px $colorMenuText1;
    }
    &_accent{ //アクセントテキスト部分
        text-align: center;
        color:$colorHighlightText;
        text-shadow: 0px 0px 1px $colorHighlightText;
        font-weight: 500;
        +_parentHover(){
          text-shadow: 0px 0px 15px $colorHighlightText;
        }
    }
  }

  // メニュー部分のスタイル定義
  .globalMenu{
    _linerList();
    &_item{
      color: $colorMenuText1;
      transition-duration: .3s;
      padding: 1.3rem;
      position: relative;


      opacity: 0.5;
      &:hover{
        opacity: 1;
      }

      // メニューのアンダーラインを作成
      &::after{
        content: '';
        position: absolute;
        transform: scaleX(0); //最初は消えている
        bottom: 0;
        left: 0;
        width: 100%;
        height: 1px;
        transition-duration: .3s;
        background-color:$colorMenuText1;
        // マウスオーバーでアンダーライン出現
        +_hover(){ // hoverの後にafterとしないと適用されない
          transform: scaleX(1); // アンダーラインを出現させる
        }
      }

    }
  }
}
