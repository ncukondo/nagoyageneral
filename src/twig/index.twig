  {% endset %}
  {{ section.section('banVideoSectionWrapper', 'あの伴ビデオ、無料公開しています', content, 'banVideo') }}


  {% macro articleCard(title, date, image,link) %}
    {% set footer %}
    <footer  class="date">更新: {{date}}</footer>
    <div class="readMore">→詳しく読む</div>
    {% endset %}
    {% import "./modules/_cards.twig" as cards %}
    {{ cards.linkImageCard('articleCard', title, '',footer, image, link) }}
  {% endmacro %}
  {% import _self as self %}

  {% set content %}
    {{ cards.container('articleCardContainer') }}
    {{ self.articleCard( '難病に立ち向かうことで何を学んでいるのか?', '2016/05/13','./images/profban.jpg', '#') }}
    {{ self.articleCard( '家族を大切にする医局ではなぜよい医師が育つのか?', '2016/05/13','./images/family.jpg', '#') }}
    {{ self.articleCard( 'はめを外すことが時に大事なわけ?', '2016/05/13','./images/2014-10-24.jpg', '#') }}
    {{ self.articleCard( '遠く離れてもつながる仲間、帰る場所があること', '2016/05/13','./images/doctors.jpg', '#') }}
    {{ cards.endContainer() }}
  {% endset %}
  {{ section.section('articleSectionWrapper', '特集記事', content) }}

  {% set content %}
  {{ cards.container('conceptCardContainer') }}
    {{ cards.basicCard('conceptCard', '診療', '私達は、疾患だけを診るのではなく、患者が抱えるあらゆる健康問題に関心を注ぎ、目の前の患者のみではなく、まわりを取り巻く家族、地域にも目を向けることを忘れません。診断・治療だけではなく、予防から福祉・介護までを視野に入れた総合ヘルスケアを実践します。') }}
